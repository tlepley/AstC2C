#################################################################
#   Generation of builtin files
##################################################################


all: vector_emulation_C.h vector_emulation_OCL.h vector_emulation_builtins.h


#-----------------------------
# Vector emulation
#-----------------------------

# Code parsed but not regenerated by the C2C
vector_emulation_C.h : src/vector_emulation_C.h
	cpp -E -o toto $<
	cat src/vector_emulation/get_elem.h toto > $@
	rm -f toto

# Code embedded with the kernel (regenerated by the C2C)
vector_emulation_OCL.h : src/vector_emulation_OCL.h
	cpp -E -o toto $<
	cat src/vector_emulation/get_elem.h toto > $@
	rm -f toto

# Vector builtins
vector_emulation_builtins.h : src/vector_emulation_builtins.h
	cpp -E -o $@ $<


#-----------------------------
# Cleaning rule
#-----------------------------

clean:
	@rm -f vector_emulation_C.h vector_emulation_OCL.h vector_emulation_builtins.h


#-----------------------------
# Dependencies
#-----------------------------

vector_emulation_C.h : src/vector_emulation/get_elem.h src/basic_types.h src/vector_emulation/vector_convert.h src/vector_emulation/vector_elements.h src/vector_emulation/vector_literals.h src/vector_emulation/vector_operators.h src/vector_emulation/vector_types.h 

vector_emulation_OCL.h : src/vector_emulation/get_elem.h src/vector_emulation/vector_convert.h src/vector_emulation/vector_elements.h src/vector_emulation/vector_literals.h src/vector_emulation/vector_operators.h src/vector_emulation/vector_types.h 

vector_emulation_builtins.h : src/vector_builtins/vector_builtins_math.h src/vector_builtins/vector_builtins_integer.h src/vector_builtins/vector_builtins_geometric.h src/vector_builtins/vector_builtins_common.h src/vector_builtins/vector_builtins_relational.h src/vector_builtins/vector_builtins_miscellaneous.h

